<UserControl x:Class="ViewRaspyHome.Menu.ToolbarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewRaspyHome.Menu"
             mc:Ignorable="d">
    <Button x:Name="button" Grid.Column="0" Style="{StaticResource RoundedButton}" Width="{Binding ActualHeight, ElementName=button, Mode=OneWay}" Height="150" Click="button_Click">
        <Image x:Name="imgMenuToolbarButton"/>
    </Button>
</UserControl>
